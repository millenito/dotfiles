{
    "suggest.enablePreview": true,
    "suggest.timeout": 500,
    "coc.preferences.previewAutoClose": true,
    "codeLens.enable": true,
    "diagnostic.virtualText": true,
    "diagnostic.checkCurrentLine": true,
    "diagnostic.errorSign": "EE",
    "diagnostic.hintSign": "HH",
    "diagnostic.infoSign": "II",
    "diagnostic.warningSign": "WW",
    "diagnostic.level": "hint",
    "snippets.extends": {
        "javascriptreact": ["javascript"]
    },
    "coc.preferences.hoverTarget": "float",
    "coc.preferences.formatOnType": true,
    "coc.preferences.formatOnSaveFiletypes": ["json", "JSON", "Json", "dart", "python"],
    "git.enableGutters": true,
    "git.addGBlameToVirtualText": true,
    "git.realtimeGutters": true,
    "git.virtualTextPrefix": "          ",
    "eslint.trace.server": "verbose",
    "html.format.enable": true,
    "prettier.tabWidth": 4,
    "prettier.printWidth": 160,
    "prettier.formatterPriority": 1,
    "prettier.disableLanguages": ["html", "smarty"],
    "emmet.includeLanguages": { "blade": "html" },
    "sql.lintOnSave": true,
    "sql.lintOnChange": true,
    "java.home": "/usr/lib/jvm/java-11-openjdk",
    "latex.forwardSearch.executable": "zathura",
    "latex.forwardSearch.args": ["--synctex-forward", "%l:1:%f", "%p"],
    "latex.build.onSave": true,
    "languageserver": {
        "bash": {
            "command": "bash-language-server",
            "args": ["start"],
            "filetypes": ["sh"],
            "ignoredRootPaths": ["~"]
        }
    }
}
